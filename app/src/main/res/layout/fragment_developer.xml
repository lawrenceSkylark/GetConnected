<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_marginTop="100dp"
        android:paddingTop="10dp"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/preview1"
        android:layout_marginLeft="80dp"
        android:id="@+id/devfb"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="70dp"
        android:paddingRight="70dp"
        android:text="Hi there ,My name is lawrence Kipngeno
and i am the person behind this app
if you have any question or suggestion ,dont hesitate to contact me."
        android:layout_below="@id/devfb"
        android:layout_centerInParent="true"
        android:paddingTop="50dp"
        android:id="@+id/devtext"/>
    <RelativeLayout
        android:layout_marginTop="40dp"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/devtext"
        android:layout_height="wrap_content">
        <ImageView
            android:padding="10dp"
            android:id="@+id/facebook"
            android:layout_marginTop="20dp"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:src="@drawable/facebook"/>
        <ImageView
            android:padding="10dp"
            android:layout_toRightOf="@+id/facebook"
            android:layout_marginTop="20dp"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:id="@+id/twitter"
            android:src="@drawable/twitter"/>
        <ImageView
            android:padding="10dp"
            android:id="@+id/search"
            android:layout_marginTop="20dp"
            android:layout_width="60dp"
            android:layout_toRightOf="@id/twitter"
            android:layout_height="50dp"
            android:src="@drawable/search"/>
    </RelativeLayout>
</RelativeLayout>