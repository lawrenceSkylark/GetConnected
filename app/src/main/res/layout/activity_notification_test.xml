<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:orientation="vertical"
        android:gravity="center_horizontal" android:padding="10dp"
        tools:context=".NotificationTest">
        <TextView
            android:layout_marginLeft="14dp"
            android:layout_width="345dp"
            android:text="ADD REMINDER"
            android:textStyle="bold"
            android:textSize="24sp"
            android:textColor="@android:color/holo_blue_dark"
            android:layout_marginTop="3dp"
            android:layout_height="50dp"/>

        <Button
            android:layout_marginTop="6dp"
            android:id="@+id/c_image"
            android:layout_width="wrap_content"
            android:text=" SELECT COW IMAGE"
            android:padding="4dp"
            android:shadowRadius="@android:integer/config_longAnimTime"
            android:background="#fff1c0"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_gravity="center_horizontal"
            android:id="@+id/imageview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp" />
        <EditText
            android:id="@+id/cname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:hint="Enter Cow Name"/>
        <EditText
            android:id="@+id/action"
            android:inputType="text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:hint="What to do(action)"/>


        <TimePicker
            android:id="@+id/timePicker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:layout_marginRight="20dp"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/savebtn"
                android:text="SET"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/cancelbtn"
                android:text="Cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


        </LinearLayout>

    </LinearLayout>
</ScrollView>