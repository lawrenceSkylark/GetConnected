<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:background="#fc1"
        android:orientation="vertical" tools:context=".BOOK_APPOINTMENT">
        <TextView
            android:layout_marginLeft="14dp"
            android:layout_width="345dp"
            android:text="BOOK APPOINTMENT"
            android:textStyle="bold"
            android:textSize="24sp"
            android:textColor="@android:color/holo_blue_dark"
            android:layout_marginTop="3dp"
            android:layout_height="50dp"/>
        <Button
            android:id="@+id/date"
            android:layout_width="327dp"
            android:layout_height="wrap_content"
            android:hint="SELECT DATE"
            android:layout_gravity="center_horizontal"
            android:textSize="23sp"
            android:textStyle="bold|italic"
            android:textColor="#bc1d"
            android:layout_marginTop="8dp"
            />
        <TextView
            android:id="@+id/dateselected"
            android:layout_width="327dp"
            android:layout_height="wrap_content"
            android:hint="DATE SELECTED"
            android:layout_gravity="center_horizontal"
            android:textSize="23sp"
            android:textStyle="bold|italic"
            android:textColor="#bc1d"
            android:layout_marginTop="8dp"
            />
        <EditText
            android:id="@+id/fname"
            android:layout_width="327dp"
            android:layout_height="wrap_content"
            android:hint="Farmer Name"
            android:layout_gravity="center_horizontal"
            android:textSize="23sp"
            android:inputType="text"
            android:textStyle="bold|italic"
            android:textColor="#bc1d"
            android:layout_marginTop="8dp"
            />
        <EditText
            android:id="@+id/fidno"
            android:layout_width="327dp"
            android:layout_height="wrap_content"
            android:hint="Farmer Id Number"
            android:layout_gravity="center_horizontal"
            android:textSize="23sp"
            android:inputType="number"
            android:textStyle="bold|italic"
            android:textColor="#bc1d"
            android:layout_marginTop="8dp"
            />
        <EditText
            android:id="@+id/f_phone"
            android:layout_width="327dp"
            android:layout_height="wrap_content"
            android:hint="Farmer Phone"
            android:layout_gravity="center_horizontal"
            android:textSize="23sp"
            android:inputType="number"
            android:textStyle="bold|italic"
            android:textColor="#bc1d"
            android:layout_marginTop="8dp"
            />
        <AutoCompleteTextView
            android:layout_marginTop="30dp"
            android:id="@+id/location"
            android:layout_width="327dp"
            android:hint=" Location(County)"
            android:textSize="23sp"
            android:textStyle="bold|italic"
            android:textColor="#bc1d"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"/>
        <AutoCompleteTextView
            android:layout_marginTop="30dp"
            android:id="@+id/service"
            android:layout_width="327dp"
            android:hint="Service Required"
            android:textSize="23sp"
            android:textStyle="bold|italic"
            android:textColor="#bc1d"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/emergency"
            android:layout_width="wrap_content"
            android:text="Send"
            android:background="@android:color/holo_blue_dark"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"/>

    </LinearLayout>
</ScrollView>